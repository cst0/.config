{
    "python.venvPath": "${env:HOME}/.config/pyenv/.pyenv/versions",
    "python.linting.flake8Enabled": false,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": ["--generate-members", "numpy"],
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/home/cst/.local/bin/black",
    "diagnostic.checkCurrentLine": true,
    "python.analysis.stubPath": "/home/cst/.config/nvim/typings",

    "languageserver":{
        "arduino":{
            "command":"/path/to/arduino-language-server",
            "rootPatterns":["*.ino"],
            "filetypes":["arduino"],
            "args":["-cli", "/path/to/arduino-cli", "-clangd", "/path/to/clangd", "-cli-config", "/path/to/arduino-cli.yaml"]
        }
    },

    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "/usr/bin/java",
            "default": true
        }
    ],
    "java.jdt.ls.vmargs": "-cp /home/cst/git/ade/.classpath",

    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--clang-tidy-checks=/home/cst/.config/clangd/clang_tidy_checks.txt"
    ],
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd",


    "suggest.noselect": true,
    "suggest.enablePreselect": false,

    "inlayHint.refreshOnInsertMode": true,
    "inlayHint.typeSeparator": "        ",
    "inlayHint.subSeparator": ";"
}
